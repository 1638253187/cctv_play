<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/about_us_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/AllBack"
    android:clipToPadding="false"
    android:paddingTop="25dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="@dimen/qb_px_10">

        <com.zkzj.rtmp_terminal.view.CircleImagesView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/qb_px_20"
            android:layout_gravity="center_horizontal"
            android:src="@mipmap/cat"
            />

        <TextView
            android:id="@+id/aboutVersion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="35dp"
            android:drawablePadding="12dp"
            android:gravity="center"
            android:text="WindHang © 版权所有"
            android:textAllCaps="false"
            android:textColor="@color/bg_gray"
            android:textSize="16sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:drawablePadding="12dp"
            android:text="特别声明:仅供学习使用"
            android:textAllCaps="false"
            android:textColor="@color/red"
            android:textSize="16sp"
            />

        <TextView
            android:id="@+id/aboutContent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:layout_gravity="center"
            tools:text="QQ: 1638253187"
            android:textColor="@color/colorBlue" />

    </LinearLayout>
</android.support.v4.widget.NestedScrollView>
