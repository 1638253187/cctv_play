<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/qb_px_20"
    android:alpha="0.8"
    android:paddingLeft="@dimen/qb_px_30"
    android:paddingRight="@dimen/qb_px_30"
    android:paddingTop="@dimen/qb_px_20">

    <RelativeLayout
        android:layout_width="@dimen/qb_px_80"
        android:background="@color/bg_gray"
        android:layout_marginTop="@dimen/qb_px_80"
        android:layout_centerHorizontal="true"
        android:layout_height="@dimen/qb_px_80">
        <ProgressBar
            android:id="@+id/pro"
            android:layout_width="@dimen/qb_px_30"
            android:layout_height="@dimen/qb_px_30"
            android:layout_marginTop="@dimen/qb_px_10"
            android:layout_centerHorizontal="true"
            android:indeterminateDrawable="@drawable/progressbar_animated" />

        <TextView
            android:id="@+id/tv_loading_dialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/pro"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/qb_px_5"
            android:text="@string/loading"
            android:textColor="@android:color/white"
            android:textSize="@dimen/qb_px_16" />
    </RelativeLayout>



</RelativeLayout>